<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.be.pxl.anthonyheremans.triviagame.NewGameActivity">
    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">
        <TextView
            android:id="@+id/LabelCoin"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Coins : "
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/TxtCoins"
            android:layout_alignEnd="@+id/TxtCoins" />

        <TextView
            android:id="@+id/TxtCoins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000"
            android:layout_alignBaseline="@+id/LabelCoin"
            android:layout_alignBottom="@+id/LabelCoin"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="39dp"
            android:layout_marginEnd="39dp" />

        <TextView
            android:id="@+id/txtDifficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:layout_marginTop="23dp"
            android:text="Difficulty"
            android:layout_below="@+id/LabelCoin"
            android:layout_centerHorizontal="true" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black"
            android:layout_marginTop="95dp"
            android:id="@+id/view5"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"

            android:gravity="center"
            android:layout_marginTop="105dp" >

            <RadioButton
                android:id="@+id/Easy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="Easy" />

            <RadioButton
                android:id="@+id/Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="Medium" />

            <RadioButton
                android:id="@+id/Hard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="Hard" />
        </RadioGroup>
        <TextView
            android:id="@+id/txtSubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:text="Subject"
            android:layout_alignBottom="@+id/view6"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="11dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black"
            android:layout_marginTop="200dp"
            android:id="@+id/view6"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <ListView
            android:id="@+id/LstSubject"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:headerDividersEnabled="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="60dp"
            android:layout_below="@+id/view6"
            android:entries="@array/trivia_array"/>

        <Button
            android:id="@+id/btnStartGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/txtSubject"
            android:text="Start !"
            android:onClick="StartNewGameClick"/>

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp"
            android:layout_toLeftOf="@+id/txtSubject"
            android:layout_toStartOf="@+id/txtSubject"
            android:text="Cancel" />

    </RelativeLayout>

<!--    <TextView
        android:id="@+id/testForAPi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"

        android:text="TextView" />-->
</android.widget.RelativeLayout>
